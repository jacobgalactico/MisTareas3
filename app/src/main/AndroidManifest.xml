<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MisTareas3"
        tools:targetApi="31">

        <!-- MainActivity como la actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MisTareas3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para ver la lista de tareas -->
        <activity android:name=".ListadoActivity" />

        <!-- Actividad para registrar una nueva tarea -->
        <activity android:name=".RegistroActivity" />

        <!-- Actividad para ver detalles de una tarea especÃ­fica -->
        <activity android:name=".DetalleActivity" />

    </application>

</manifest>
